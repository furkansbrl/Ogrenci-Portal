@{
}

@model List<StudentPortal.Web.Models.Entities.Student>
<style> 
    th{
        color: red;
    }
</style>

<h1>Öğrenciler</h1>

@if (Model.Count == 0)
{
    <h5 class="text-danger">Henüz listede kayıtlı öğrenci yok!</h5>

}
else{
<table class="table">
    <thead>
        <tr>
            <th>Öğrenci ID</th>
            <th>Ad</th>
            <th>Email</th>
            <th>Değiştir</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.Id</td>
                <td>@student.Name</td>
                <td>@student.Email</td>
                <td>
                    <a class="btn btn-primary" asp-controller="Students" asp-action="Edit" asp-route-id="@student.Id">Düzenle</a>
                </td>
            </tr>
        }
    </tbody>
</table>
}